@model web.Models.General
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>
<div>
   @if (Model != null)
   {
    <div class="criteria">
        @* Create a HTML Form so that users can enter criteria for the Advanced Report *@
        @using (Html.BeginForm("GetInfo", "Home", FormMethod.Post))
        {
            <label>Select Vendor</label>
            @Html.DropDownListFor(m => m.ID, Model.Customers, "-- Please select --", new { @class = "form-control" })
            <label>From</label>
            @Html.TextBoxFor(m => m.MaxDate, "yyyy-MM-dd", new { @Value = "2013-08-01", @type = "date", @class = "form-control" })
            <label>To</label>
            @Html.TextBoxFor(m => m.MinDate, "yyyy-MM-dd", new { @Value = "2013-08-30", @type = "date", @class = "form-control" })
            <br />
            <input type="submit" value="Generate" class="btn btn-primary" />
        }
    </div>
   }
   else
   {
       <h1>Hello</h1>
   }
    
    <img />
</div>
<div></div>